<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/md_red_300" />
            <gradient android:angle="-90" android:startColor="#345953" android:endColor="@color/md_red_300"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/md_red_300" />
            <solid android:color="@color/md_red_300"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/md_red_300" />
            <gradient android:angle="-90" android:startColor="@color/md_red_300" android:endColor="@color/md_red_300" />
        </shape>
    </item>
</selector>